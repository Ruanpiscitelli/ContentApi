# Configurações da API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=1

# Configurações de CORS
CORS_ORIGINS=*

# Configurações de segurança
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Configurações de cache
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLE=true
CACHE_TTL_DEFAULT=3600
CACHE_TTL_EMBEDDINGS=86400
CACHE_MAX_ITEMS=1000
CACHE_MAX_EMBEDDINGS=1000

# Configurações de hardware
GPU_ENABLED=true
GPU_MEMORY_FRACTION=0.9
GPU_TENSOR_PARALLEL_SIZE=4

# Configurações de logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=text_generation.log

# Configurações de monitoramento
ENABLE_PROFILING=true
PROFILE_INFERENCE=true
ALERT_GPU_MEMORY=0.95
ALERT_GPU_TEMPERATURE=80
ALERT_CPU_USAGE=0.95
ALERT_MEMORY_USAGE=0.95
ALERT_LATENCY=5.0

# Configurações de rate limit
RATE_LIMIT_GLOBAL_RPS=100.0
RATE_LIMIT_GLOBAL_BURST=200
RATE_LIMIT_GLOBAL_WINDOW=60
RATE_LIMIT_IP_RPS=10.0
RATE_LIMIT_IP_BURST=20
RATE_LIMIT_IP_WINDOW=60
RATE_LIMIT_TOKEN_RPS=5.0
RATE_LIMIT_TOKEN_BURST=10
RATE_LIMIT_TOKEN_WINDOW=60

# Configurações de validação
MAX_TEXT_LENGTH=32768
MAX_PROMPT_LENGTH=4096
MAX_IMAGES=4
MAX_IMAGE_SIZE=4194304
MAX_FUNCTIONS=10
MAX_FUNCTION_PARAMS=10
MAX_MESSAGES=100 